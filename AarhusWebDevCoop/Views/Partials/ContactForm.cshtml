@model AarhusWebDevCoop.ViewModels.ContactForm
@{
    Layout = null;
}
 @if (TempData["success"] == null)
    {
        using (Html.BeginUmbracoForm("HandleFormSubmit", "ContactFormSurface", new object { },
                                        new { @class = "form-horizontal" }))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                    @Html.ValidationMessageFor(m => m.Name, String.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email address" })
                    @Html.ValidationMessageFor(m => m.Email, String.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Subject, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-9">
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Subject" })
                    @Html.ValidationMessageFor(m => m.Subject, String.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Message, new { @class = "col-xs-3 control-label" })
                <div class="col-xs-9">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control", placeholder = "Your message" , rows = 5 })
                    @Html.ValidationMessageFor(m => m.Message, String.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="form-group right-text">
                <div class="col-xs-12">
                    <button id="contact-submit" type="submit" class="btn btn-primary input-medium pullleft">Send</button>
                </div>
            </div>
        }
    }
    else
    {
        <p>Thank you for contacting us. We’ll be in touch soon!</p>
    }